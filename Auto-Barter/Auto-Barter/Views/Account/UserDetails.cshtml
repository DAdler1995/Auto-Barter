        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.UserDetailsId)
        @Html.HiddenFor(model => model.UserAccount.Password)
        @Html.HiddenFor(model => model.UserAccount.ConfirmPassword)

        <div class="tab-content">
            <div id="PersonalInformation" class="tab-pane fade in active">
                <h4>Personal Information</h4>
                <hr />

                <div class="form-group">
                    @Html.LabelFor(model => model.UserAccount.FirstName, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.UserAccount.FirstName, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.UserAccount.FirstName, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
