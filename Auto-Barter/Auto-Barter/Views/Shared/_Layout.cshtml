<!DOCTYPE html>
<html>
<head>
    <!-- made by www.metatags.org -->
    <meta name="description" content="Trade, barter, and swap vehicles. You have the ability to list your car for a straight trade or include extra money to get better offers." />
    <meta name="keywords" content="Trade Car, Barter Car, Swap Car, Car, Automobile, Vehicle, Switch Car, New Car, Used Car, Old Car" />
    <meta name="author" content="Jodak Web Solutions">
    <meta name="robots" content="index, follow">
    <meta name="revisit-after" content="3 month">
    <title>Auto-Barter</title>
    <!-- Trade Car, Barter Car, New Car -->

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" href="~/Content/Images/Logo-v1.png">
    <link rel="apple-touch-icon-precomposed" href="~/Content/Images/Logo-v1.png">
    <title>Auto-Barter | @ViewBag.Title</title>
    @Styles.Render("~/Content/css")
</head>
<body>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    
    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a href="@Url.Action("Index", "Default", null)" class="navbar-brand" >
                    <img class="hidden-xs" src="~/Content/Images/Logo-Big-v1.png" alt="Auto-Barter" />
                    <img class="hidden-lg hidden-md hidden-sm" src="~/Content/Images/Logo-v1.png" alt="Auto-Barter" />
                </a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav navbar-right">
                    @if (Session["UserId"] == null)
                    {
                        <li>@Html.ActionLink("Login", "Login", "Account")</li>
                        <li>@Html.ActionLink("Register", "Register", "Account")</li>
                    }
                    else
                    {
                        if (Session["UserRole"].ToString() == "ADMIN")
                        {
                            <li>@Html.ActionLink("Admin Tools", "Index", "Admin")</li>
                        }

                        <li>@Html.ActionLink(Session["FullName"].ToString().Split('@')[0], "UserDetails", "Account")</li>
                        <li>@Html.ActionLink("Logout", "Logout", "Account")</li>
                    }
                </ul>
            </div>
        </div>
    </nav>
    <div class="page-row page-row-expanded">
        <div class="container body-content">
            @if (ViewBag.Message != null)
            {
            <div class="row">
                <div class="col-xs-12">
                    @ViewBag.Message
                </div>
            </div>
            }

            @RenderBody()
        </div>
    </div>
    <footer class="page-row">
        <hr />
        <div class="container">
            <p>&copy; @DateTime.Now.Year Auto-Barter</p>
        </div>
    </footer>
</body>
</html>